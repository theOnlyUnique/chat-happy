{
    "compilerOptions": {
      "noImplicitAny": false,
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "checkJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }